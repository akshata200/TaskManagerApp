<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task</title>
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/styleIndex.css">
</head>

<body>
    <nav class='dark-nav'>
        <div class='nav-head'>Task Manager</div>
        <button id="logOut" class="btn-gradient">
            <a href="/">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </button>
    </nav>
    <div class="container">
        <form action="/addTask" method="GET">
            <input type="hidden" name="email" id="owner">
            <button id="addTask" type="submit" class="btn-gradient">
                <i class="fas fa-tasks"></i> AddTask
            </button>
        </form>
        <table class='table'>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Done</th>
                </tr>
            </thead>
            <tbody>
                <%- include('include/_showTask') %>
            </tbody>
        </table>
    </div>
    <script>
        var email = "<%= email %>";
        console.log(email);
        const owner = document.getElementById('owner');
        owner.value = email;
    </script>
    <script src="js/index.js"></script>
</body>

</html>