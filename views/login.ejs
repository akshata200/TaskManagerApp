<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/styleLogin.css">
</head>

<body>
    <!-- This is login page -->
    <div class="container">
        <div class="form-title"> Sign In</div>
        <div id="renAlert" class="alert"></div>
        <form autocomplete="off" action="/login" method="post">
            <div class="form">
                <!-- name email password-->
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="name" id="name" value="" placeholder="Name">
                    <span id="nameAlert"></span>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" value="" placeholder="abc@gmail.com">
                    <span id="emailAlert"></span>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" value=""
                        placeholder="Minimum 7 characters password">
                    <span id="passwordAlert"></span>
                </div>
                <div class="form-group">
                    <span id="formAlert"></span>
                    <button class='btn2' id='btn2' type="submit">Login</button>
                </div>
            </div>
        </form>
        <div class="text-center">Don't have an account? <div class='btn1 inline'><a href="/add-user"> Sign up</a></div>
        </div>
    </div>
    <script>
        // at rendering...error alert
        var renError = "<%= alert %>";
        console.log(renError);
        const renAlert = document.getElementById('renAlert');
        if (renError != "good") {
            renAlert.classList.add("active");
            renAlert.classList.add("danger");
            renAlert.innerHTML = renError;
        } else {
            renAlert.classList.remove("active");
            renAlert.classList.remove("danger");
            renAlert.innerHTML = renError;
        }
    </script>
    <script src="js/validateLoginForm.js"></script>
</body>

</html>